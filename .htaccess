# Security Configuration for Agentes One-Shot v2.0

# Enable URL Rewriting
RewriteEngine On

# Prevent directory listing
Options -Indexes

# URL Rewriting Rules - Remove .php extension and add custom routes
# Handle agent URLs directly
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-zA-Z0-9_-]+)$ index.php?agent=$1 [L,QSA]

# Remove .php from URLs (redirect to clean URL)
RewriteCond %{THE_REQUEST} \.php[\s?] [NC]
RewriteRule ^(.+)\.php$ /$1 [R=301,L,NE]

# Prevent access to sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to configuration files
<FilesMatch "^(config|security|.*\.log|security_logs)\.(php|json|log)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to backup files
<FilesMatch "\.(bak|backup|old|orig|save)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevent access to composer files
<FilesMatch "^(composer|package|\.env)\.(json|lock|dist)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to documentation in production (comment out for development)
# <FilesMatch "^(README|COMO|INSTALL|CHANGELOG)\.(md|txt)$">
#     Order allow,deny
#     Deny from all
# </FilesMatch>

# Security headers
<IfModule mod_headers.c>
    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options nosniff

    # XSS Protection
    Header always set X-XSS-Protection "1; mode=block"

    # Prevent clickjacking
    Header always set X-Frame-Options DENY

    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # Content Security Policy (disabled for development - re-enable for production)
    # Header always set Content-Security-Policy "default-src 'self' 'unsafe-inline' 'unsafe-eval' https: data:; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; font-src 'self' https://cdn.jsdelivr.net data:; img-src 'self' data: https:; connect-src 'self' https:; object-src 'none'; base-uri 'self';"

    # Server signature
    ServerTokens Prod

    # Remove ETag for better caching
    FileETag None
</IfModule>

